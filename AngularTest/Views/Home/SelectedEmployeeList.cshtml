<table style="width: 100%" cellspacing="0">
    <tr>
        <td><h1>{{head}}</h1></td>
        <td align="right"><button routerLink='/addentry/MitarbeiterBeobachter' routerLinkActive='active' md-raised-button color="BoschRed" style="color:white;margin:10px 0px 10px 10px;height:60px !important;width:180px !important;">{{new}}</button></td>
    </tr>
</table>

<md-card style="margin-bottom: 20px;" [style.background]="'#b3c6ff'">
    <md-input *ngIf='Observername' placeholder={{obsname}} disabled [(ngModel)]='Observername'></md-input>
    <md-input *ngIf='area' placeholder={{placename}} disabled [(ngModel)]='area'></md-input>
    <b>{{lastdetails}}:</b> {{lastdata}}
</md-card>

<section layout="row" layout-sm="column" layout-align="center center" layout-wrap>
    <button *ngFor='let emp of employeelist2' [style.background-color]="getStyle(emp[0].id)" value={{emp[0].id}} id={{emp[0].id}} (click)='goToEmployeeActivity(emp[0].id,emp[0].name)'  (dblclick)="goToEdit(emp[0].id,emp[0].name,Edit)" md-raised-button style="margin: 2px 2px;height:120px;width:245px;vertical-align:middle;color:white;">
        {{emp[0].name}}
    </button>
</section>

<md2-dialog #Edit>
    <md2-dialog-title>{{update}} {{head}}</md2-dialog-title>
    <md-input class="demo-full-width" placeholder={{company}} disabled value="Robert Bosch GmbH"> </md-input>
    <table style="width: 100%" cellspacing="0" cellpadding="10">
        <tr>
            <td><md-input #Id placeholder="ID" disabled style="width: 80%" value={{id}} id={{id}}></md-input></td>
        </tr>
        <tr>
            <td><md-input #empname placeholder={{surname}} style="width: 80%" value={{name}} required></md-input></td>
            <td><md-input #empvorname placeholder={{firstname}} style="width: 80%" value={{vorname}} required></md-input></td>
        </tr>
        <tr>
            <td><md-input #empfunction disabled placeholder={{functionheader}} style="width: 80%" value={{function}} required></md-input></td>
            <td><md-input #emparea placeholder={{placename}} value={{area}} style="width: 80%" required></md-input></td>
        </tr>
    </table>
    <md2-dialog-footer>
        <button md-raised-button color="success" (click)="goToUpdate(Id.value,empname.value,empvorname.value,empfunction.value,emparea.value,Edit)">{{update}}</button>
        <button md-raised-button color="BoschRed" (click)="confirm1.show()">{{delete}}</button>
        <button md-raised-button (click)="Edit.close()">{{cancel}}</button>
    </md2-dialog-footer>
</md2-dialog>

<md2-dialog #confirm1>
    <md2-dialog-title>{{warning}}!!!</md2-dialog-title>
    <div><b>{{id}}-</b> {{warndata}}</div>
    <md2-dialog-footer>
        <button md-raised-button color="success" (click)="goToDelete(id,name,vorname,function,area,confirm1,Edit)">{{yes}}</button>
        <button md-raised-button color="BoschRed" (click)="confirm1.close()">{{no}}</button>
    </md2-dialog-footer>
</md2-dialog>

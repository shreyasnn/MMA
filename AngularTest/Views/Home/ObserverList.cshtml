<section layout="row"  *ngIf='obser' layout-sm="column" layout-align="center center" layout-wrap>
    <button *ngFor='let obs of obser'  value={{obs[0].id}} id={{obs[0].id}} color="BoschBlue75" (click)="goToArea(obs[0].id,obs[0].name)" (dblclick)="goToEdit(obs[0].id,obs[0].name,Edit)" md-raised-button style="margin: 2px 2px;height:120px;width:245px;vertical-align:middle;">
        {{obs[0].name}}
    </button>
</section>

<md2-dialog #Edit>
    <md2-dialog-title>{{update}} {{head}}</md2-dialog-title> 
    <md-input class="demo-full-width" placeholder={{company}} disabled value="Robert Bosch GmbH"> </md-input>
    <table style="width: 100%" cellspacing="0" cellpadding="10">
        <tr>
            <td><md-input #Id placeholder="ID" disabled style="width: 80%" value={{id}} id={{id}} ></md-input></td>
        </tr>
        <tr>
            <td><md-input #Obsname placeholder={{surname}}  style="width: 80%" value={{name}} required></md-input></td>
            <td><md-input #Obsvorname placeholder={{firstname}} style="width: 80%" value={{vorname}} required></md-input></td>
        </tr>
    </table>
    <md2-dialog-footer>
        <button md-raised-button color="success" (click)="goToUpdate(Id.value,Obsname.value,Obsvorname.value,Edit)">{{update}}</button>
        <button md-raised-button  color="BoschRed" (click)="confirm1.show()">{{delete}}</button>
        <button md-raised-button (click)="Edit.close()">{{cancel}}</button>
    </md2-dialog-footer>
</md2-dialog>

<md2-dialog #confirm1>
    <md2-dialog-title>{{warning}}!!!</md2-dialog-title>
    <div> <b>{{id}}-</b> {{warndata}}</div>
    <md2-dialog-footer>
        <button md-raised-button color="success" (click)="goToDelete(id,name,vorname,confirm1,Edit)">{{yes}}</button>
        <button md-raised-button color="BoschRed" (click)="confirm1.close()">{{no}}</button>
    </md2-dialog-footer>
</md2-dialog>